{
  "name": "ai-workflow-runner",
  "version": "0.0.0",
  "description": "Run AI workflows with Node.js, Python, and Java runtime support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.js --sourcemap",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPatterns='src/.*\\.spec\\.ts$' --coverage",
    "test:integration": "jest --testPathPatterns=integration --runInBand",
    "test:unit:ci": "jest --testPathPatterns='src/.*\\.spec\\.ts$' --coverage --reporters=default --reporters=jest-junit",
    "test:integration:ci": "jest --testPathPatterns=integration --runInBand --reporters=default --reporters=jest-junit",
    "test:e2e": "jest --testPathPatterns=e2e --runInBand --testTimeout=180000",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --max-warnings 0",
    "lint:ci": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --max-warnings 0 --format json --output-file reports/eslint-report.json",
    "format": "prettier --write src test",
    "format:check": "prettier --check src test",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arch-playground/ai-workflow-runner.git"
  },
  "keywords": [
    "github-action",
    "ai",
    "workflow",
    "automation"
  ],
  "author": "TanNT",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@opencode-ai/sdk": "^1.1.64"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vercel/ncc": "^0.38.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.13.0",
    "eslint-plugin-prettier": "^5.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
