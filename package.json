{
  "name": "ai-workflow-runner",
  "version": "0.0.0",
  "description": "Run AI workflows with Node.js, Python, and Java runtime support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/index.js --sourcemap",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern='src/.*\\.spec\\.ts$' --coverage",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "test:e2e": "jest --testPathPattern=e2e --runInBand --testTimeout=180000",
    "lint": "eslint src test --max-warnings 0",
    "format": "prettier --write src test",
    "format:check": "prettier --check src test",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arch-playground/ai-workflow-runner.git"
  },
  "keywords": [
    "github-action",
    "ai",
    "workflow",
    "automation"
  ],
  "author": "TanNT",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@opencode-ai/sdk": "^1.1.28"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
